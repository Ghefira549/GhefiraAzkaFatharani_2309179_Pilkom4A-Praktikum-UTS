package uts_no3;

/**
 *
 * @author FARIZ
 */
import java.util.Scanner;
public class UTS_NO3 {

    public static int sumDigits(long n){
        int total=0;
        while(n!=0){
        total=(int) (total+(n%10));
        n=n/10; 
        }
        return total;
    }
    public static void main(String[] args) {
        long bilangan;
       Scanner inputObjk=new Scanner(System.in);
        System.out.print("Masukkan Bilangan Bulat: ");
        bilangan=inputObjk.nextLong();
        System.out.println(sumDigits(bilangan));
    }
    
}
